#!/bin/bash

if [ -n "$CONFIG" ]; then

   echo "$CONFIG" > /usr/share/metricbeat/metricbeat.yml

fi


if [ -n "${ES_URL}" ] && [ $(grep -c "output.elasticsearch" /usr/share/metricbeat/metricbeat.yml )  -eq 0 ]; then

    echo "output.elasticsearch:
  hosts: [\"${ES_URL}\"]" >> /usr/share/metricbeat/metricbeat.yml
    if [ -n "${ES_USER}" ] && [ -n "${ES_PASSWORD}" ]; then
    echo "  username: \"${ES_USER}\"
  password: \"${ES_PASSWORD}\" " >> /usr/share/metricbeat/metricbeat.yml

   fi
fi

if [ -n "${KIBANA_URL}" ] && [ $(grep -c "setup.kibana" /usr/share/metricbeat/metricbeat.yml )  -eq 0 ]; then

    echo "setup.kibana:
  host: \"${KIBANA_URL}\"" >> /usr/share/metricbeat/metricbeat.yml

fi

if [ -n "${TAGS}" ] ; then
    sed -i "s/^tags: .*/tags: [${TAGS}]/"  /usr/share/metricbeat/metricbeat.yml
fi

if [ -n "${CHECK_INTERVAL}" ]; then
  sed -i "s/^  period: .*/  period: ${CHECK_INTERVAL}/" /usr/share/metricbeat/metricbeat.yml
fi


if [ -n "${RANCHER_METADATA}" ]; then

     host=$(curl -s  http://rancher-metadata/latest/self/host/hostname)
     echo "name: $host" >> /usr/share/metricbeat/metricbeat.yml

     env=$(curl -s  http://rancher-metadata/latest/self/stack/environment_name)
    
     echo "fields_under_root: true
fields:
  rancher.environment: '$env'" >> /usr/share/metricbeat/metricbeat.yml

fi

exec /usr/local/bin/metricbeat-entrypoint "$@"
